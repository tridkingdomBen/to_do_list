<% if @list.errors.present? %>
  <ul>
    <% @list.errors.each do |error,message|%>
      <li><%= "#{error.capitalize} #{message}"%></li>
    <% end %>
  </ul>
<% end %>

<div class='form container'>
  <%= form_for @list do |f| %>
  <div class='form-group'>
    <%= f.label :name, "Title" %>
    <%= f.text_field :name , class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :duedate, "Duedate" %>
    <%= f.date_select :duedate ,class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :note, "Note" %>
    <%= f.text_area :note , class: 'form-control'%>
  </div>
  
    <%= f.submit %>
  <% end %>
</div>